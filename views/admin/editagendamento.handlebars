    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar Agendamentos:</h3>
<div class="card">
    <div class="card-body">
        <form action="/agendamentos/edit" method="post">
        <input type="hidden" name="id" value="{{categorias._id}}">
        <label for="evento">Evento: </label>
        <input type="text" id="evento" name="evento" placeholder="Nome do evento" class="form-control" value="{{categorias.Evento}}">
        <label for="conteudo">Conteúdo: </label>
        <input type="text" id="conteudo" name="conteudo" placeholder="Conteúdo do evento" class="form-control" value="{{categorias.Conteudo}}">
        <br>
        <button type="submit" class="btn btn-success">Editar Evento</button>
        </form>
    </div>
</div>
