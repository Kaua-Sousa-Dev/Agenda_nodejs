<!-- Mensagem de erro -->
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<!-- Card de edição de postagens -->
<div class="card">
    <div class="card-body">
        <h4>Nova Postagem:</h4>
        <form action="/postagens/edit" method="post">
        <input type="hidden" name="id" value="{{postagens._id}}">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagens.titulo}}">
            <label for="slug">Horários: </label>
            <input type="text" name="slug" class="form-control" value="{{postagens.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagens.descricao}}">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control">{{postagens.conteudo}}</textarea>
            <label for="categorias">Agendas: </label>
            <select name="categorias" class="custom-select mt-2">
                {{#each categorias}}
                    <option value="{{_id}}">{{this.Evento}}</option>
                {{else}}
                    <option value="0">Nenhuma agenda registrada</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success mt-2">Editar Postagem</button>
        </form>
    </div>
</div>